{
  "name": "wreckage",
  "version": "2.0.0",
  "author": "Michael Shick <m@shick.us>",
  "license": "MIT",
  "description": "A convenient, modern request library built around Wreck. A fork of Wrecked.",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build": "rimraf lib && NODE_ENV=production BABEL_ENV=production babel src -d lib",
    "prepublish": "npm test && npm run build",
    "lint": "eslint src",
    "test": "nyc ava"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mshick/wreckage.git"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "keywords": [
    "wreck",
    "request",
    "promise",
    "async",
    "get",
    "post",
    "patch",
    "put",
    "delete",
    "http"
  ],
  "bugs": {
    "url": "https://github.com/mshick/wreckage/issues"
  },
  "homepage": "https://github.com/mshick/wreckage#readme",
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "boom": "^7.1.1",
    "lodash.defaultsdeep": "^4.6.0",
    "wreck": "^14.0.2"
  },
  "devDependencies": {
    "ava": "^0.23.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.24.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.10.0",
    "eslint-config-xo-space": "^0.17.0",
    "nock": "^9.0.28",
    "nyc": "^11.3.0",
    "rimraf": "^2.6.1"
  }
}
